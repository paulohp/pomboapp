extends ../layout

block content
  .container
    .header
      a.navbar-brand(href='/')
        .logo
          h1 Pombo
            span.blue APP

    .col-sm-6
      h1
        span.fa.fa-sign-in Edit Profile
      //- - if (message.length > 0)
      //-   .alert.alert-danger #{message}
      form(action='/profile/update', method='post')
        input(type='hidden', name='_method', value='PUT')
        .form-group
          label Name
          input.form-control(type='text', name='name', value="#{user.name}")
        .form-group
          label Email
          input.form-control(type='text', name='email', value="#{user.local.email}")
        .form-group
          label Password
          input.form-control(type='password', name='password', value="#{user.local.password}")
        button.btn.btn-warning.btn-lg(type='submit') Save
      hr
      p
        a(href='/profile') back
